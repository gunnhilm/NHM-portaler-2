<!DOCTYPE html>
<html>
    <head>
        <title>Get DOI from GBIF from a list of museum numbers</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        
    </head>
    <body>
        <div class="wrapper">
            {{>header}}
            
            <div class="content">
                <br><br><br><br>
                <p class="page-header" id="getDOIHeader"></p>
                <p class="neutral" id="getDOIText"></p>
                <br>

            <form  method="post">
                <table>
                <tr>
                    <label for="museum-select" id="select-museum-label"></label>
                    <select id="museum-select" style="height:30px; border-radius:4px;">
                        <option value="" id="selectMuseum"></option>
                        <option value="nhm" id="nhm">NHM</option>
                        <option value="um" id="um">UM</option>
                        <option value="vm" id="vm">VM</option>
                        <option value="tmu" id="tmu">TMU</option>
                        <option value="other-museum" id="other-museum">other</option>
                    </select>
                </tr>
                &nbsp
                &nbsp
                <tr>
                                  
                    <label for="collection-select" id="select-collection-label"></label>
                    <select id="collection-select" style="height:30px; border-radius:4px;">
                        <option value="" id="selectCollection"></option>
                    </select>
                    
                </tr>
                
                <tr>
                   <td><br>
                        <label for="collection-key">Collection-key:</label>
                        <input type="text" id="collection-key" name="collection-key" required><br><br>
                    </td>
                </tr>
                <tr>
                    <td>
                        <br>
                         <fieldset style="background-color:#E8E8E8;">
                            <legend id="onloggingData"></legend>
                            <table >
                                <tr>
                                    <td>
                                        <label for="email" id="emailRequest"></label>
                                    </td>
                                    <td>
                                        <input type="email" id="email" name="email" required>
                                    </td>
                                </tr>
                                <tr >
                                    <td>
                                        <label for="username" id="usernameRequest"></label>
                                    </td>
                                    <td>
                                        <input type="text" id="username" name="username" required>
                                    </td>
                                </tr> 
                                <tr>
                                    <td>
                                        <label for="pwd" id="passwordRequest"></label>
                                    </td>                          
                                    <td>
                                        <input type="password" id="current-password" name="pwd" required>
                                    </td>
                                </tr>
                            </table>
                         </fieldset>
                    </td>
                </tr>
                    <td>  <br>              
                        <label for="museums-Numbers" id="pasteRequest"></label>
                        <br>
                        <textarea id="museums-Numbers" name="museums-Numbers" rows="10" cols="50"></textarea>
                        <br><br>
                    </td>
                </table>

                <input type="submit" value="Submit" style="padding:6px; font-size:16px"> &nbsp
                <input type="reset" style="padding:6px; font-size:16px" id="resetButton">
                <br><br><br>
                <fieldset>
                    <legend id="results"></legend>
                    <img id="please-wait" src="/nhm/images/ajax-loader.gif" alt="Please Wait"  style="display:none" valign="top">
                    <p id="DOI-result"></p>
                    <p id="Download-link"></p>
                </fieldset>


            </form>
            </div>
            {{>footer}}
        </div>
        <link rel="stylesheet" href="/nhm/styles/styles.css">
        <link id="museumStyle" rel="stylesheet" type="text/css" href= "">
        <script src="/nhm/scripts/utils/showCorrectMuseum.js"></script>
        <script src="/nhm/scripts/utils/textItems.js"></script>
        <script src="/nhm/scripts/utils/renderLang.js"></script>
        <script src="/nhm/scripts/utils/papaparse/papaparse.min.js"></script>
        <script src="/nhm/scripts/utils/getDOI/dataObject.js"></script>
        <script src="/nhm/scripts/utils/getDOI/getDOI.js"></script>

    </body>


</html>